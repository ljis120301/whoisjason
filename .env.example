# ===========================================
# WhoisJason Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# -------------------------------------------
# SPOTIFY CONFIGURATION
# -------------------------------------------
# Get from: https://developer.spotify.com/dashboard
# Required redirect URIs in Spotify app settings:
#   - http://127.0.0.1:3001/api/spotify/auth?action=callback
#   - https://whoisjason.me/api/spotify/auth?action=callback

SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
# Get this via one-time OAuth: visit /api/spotify/auth after setting above
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token

# -------------------------------------------
# DISCORD CONFIGURATION
# -------------------------------------------
# Create bot at: https://discord.com/developers/applications
# Bot needs: Presence Intent enabled

DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_USER_ID=your_discord_user_id
DISCORD_GUILD_ID=your_discord_guild_id

# Webhook URL for contact form submissions
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# -------------------------------------------
# STEAM CONFIGURATION
# -------------------------------------------
# Get API key at: https://steamcommunity.com/dev/apikey
# Find Steam ID at: https://steamid.io

STEAM_API_KEY=your_steam_api_key
STEAM_ID=your_steam_id

# -------------------------------------------
# GITHUB CONFIGURATION
# -------------------------------------------
# Create token at: https://github.com/settings/tokens
# Token needs: read:user, repo scopes

GITHUB_TOKEN=your_github_personal_access_token
NEXT_PUBLIC_GITHUB_USERNAME=your_github_username

# -------------------------------------------
# ADMIN CONFIGURATION
# -------------------------------------------
# Used for Spotify OAuth and admin dashboard access

ADMIN_PASSCODE=your_secure_admin_passcode
